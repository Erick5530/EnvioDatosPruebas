<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bb_darkBackgroundColor">

    <android.view.SurfaceView
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.theartofdev.edmodo.cropper.CropImageView
            android:id="@+id/cropImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/buttonRotate90pos"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="18dp"
                android:src="@drawable/ic_rotate_left_white_24dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/buttonRotateM90pos"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="18dp"
                android:src="@drawable/ic_rotate_right_white_24dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/buttonFlash"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/button_capture"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/button_capture"
                android:layout_toStartOf="@+id/button_capture"
                android:padding="20dp"
                android:src="@drawable/ic_flash_auto_white_24dp" />

            <ImageView
                android:id="@+id/button_capture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/icon_circle"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/buttonNo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/button_capture"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/button_capture"
                android:layout_toRightOf="@+id/button_capture"
                android:padding="20dp"
                android:src="@drawable/ic_redo_white_24dp" />

        </RelativeLayout>
    </FrameLayout>
</FrameLayout>